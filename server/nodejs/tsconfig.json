{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@Backend/*": ["./src/*"],
    },
    /** TypeORM */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
    /** End TypeORM */
  },
  "lib": ["es2015"],
  "exclude": ["node_modules"]
}